
._header {
  background: #f4f6f9;
  width: 100%;
  height: 350rpx;
  box-sizing: border-box;
  padding: 50rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
._header .avatar {
  width: 110rpx;
  height: 110rpx;
  background: #fff;
  text-align: center;
  border-radius: 50%;
}
._header image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
._li,
._button.concat {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  border: 0;
  border-bottom: 1rpx solid #eee;
}
._li ._span:nth-child(2),
._button.concat ._span:nth-child(2) {
  flex: 1;
  margin-left: 40rpx;
  color: #666;
  font-size: 36rpx;
  background: transparent;
  text-align: left;
}
._li image,
._button.concat image {
  width: 40rpx;
  height: 40rpx;
}
._button.concat {
  height: 106rpx;
}